<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.auto.plate.mapper.UserMapper">

    <resultMap type="org.auto.plate.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="company" column="company" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="createdate" column="createdate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--根据用户名username查询用户-->
    <select id="selectUserByUsername" resultMap="UserMap">
        select * from user where username = #{username}
    </select>
    <!--根据username,password查询user-->
    <select id="getUser" resultMap="UserMap">
        select * from user where username = #{username} and password = #{password}
    </select>

    <!-- 分页查询用户列表-->
    <select id="findUserList" resultMap="UserMap">
        select * from user where username like concat('%','${query}','%') limit #{firstNum}, #{pageSize}
    </select>

    <!--获取用户列表-->
    <select id="selectUserList" resultMap="UserMap">
        select * from auto.user
    </select>
    <sql id="Base_Column_List">
        id, username, password, company, address, createdate
    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          id, username, password, company, address, createdate
        from auto.user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          id, username, password, company, address, createdate
        from auto.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          id, username, password, company, address, createdate
        from auto.user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="company != null and company != ''">
                and company = #{company}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="createdate != null">
                and createdate = #{createdate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into auto.user(username, password, company, address, createdate)
        values (#{username}, #{password}, #{company}, #{address}, #{createdate})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update auto.user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="company != null and company != ''">
                company = #{company},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="createdate != null">
                createdate = #{createdate},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from auto.user where id = #{id}
    </delete>

</mapper>